<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
	id="engine.moxtra.bng.moxtraplugin"
    version="1.0.3">

	<name>MoxtaPlugin</name>
	<description>The FASTEST and EASIEST TO USE Cordova Moxtra plugin for Android. We do not send your apps details to our servers.</description>
	<author>Moxtra</author>
	<license>MoxtraInc1.3</license>
	<keywords>moxtra, google, cordova-android,cordova-moxtra, moxtrainc</keywords>
	<repo></repo>
    <issue></issue>

	<js-module src="www/moxtra_plugin.js" name="moxtraplugin">
        <clobbers target="Moxtra" />
    </js-module>


 <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            
          	<feature name="MoxtraPlugin" >
                <param name="android-package" value="com.moxtra.cordovaplugin.MoxtraPlugin"/>
            </feature>
        </config-file>
        <source-file src="src/android/com/moxtra/cordovaplugin/MoxtraCorodovaApplication.java" target-dir="src/com/moxtra/cordovaplugin" />
        <source-file src="src/android/com/moxtra/cordovaplugin/MoxtraCorodovaMainApp.java"  target-dir="src/com/moxtra/cordovaplugin"/>
        <source-file src="src/android/com/moxtra/cordovaplugin/MoxtraPlugin.java"  target-dir="src/com/moxtra/cordovaplugin"/>
        <source-file src="src/android/com/moxtra/cordovaplugin/RumtimeParameters.java"  target-dir="src/com/moxtra/cordovaplugin"/>
        <source-file src="src/android/com/moxtra/cordovaplugin/ConstantForMoxtra.java"  target-dir="src/com/moxtra/cordovaplugin"/>
        
        <framework src="src/android/moxtrabuild1.gradle" custom="true" type="gradleReference" />
        <framework src="src/android/moxtrabuild2.gradle" custom="true" type="gradleReference" />

    </platform>
 </plugin>


